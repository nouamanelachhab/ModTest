<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/ic_bg_plan_de_travail_1_copie_2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="228dp"
        android:layout_height="193dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416"
        app:srcCompat="@drawable/iconn"
        tools:ignore="VectorDrawableCompat" />


    <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
        android:id="@+id/lazyl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        app:lazyloader_firstDelayDur="2000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:loader_animDur="1000"
        app:loader_circleRadius="7dp"
        app:loader_defaultColor="#FE5E00"
        app:loader_dotsDist="3dp"
        app:loader_expandOnSelect="false"
        app:loader_firstShadowColor="#FE5E00"
        app:loader_isSingleDir="false"
        app:loader_noOfDots="3"
        app:loader_secondShadowColor="#FE5E00"
        app:loader_selectedColor="#C82900"
        app:loader_selectedRadius="10dp"
        app:loader_showRunningShadow="true"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>